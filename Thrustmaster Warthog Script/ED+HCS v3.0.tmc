	// receives a string of characters at TCP port 1000 and print it
	int TCPCallback(int buf, int size)
	{
		char c;
   		Map(&c, buf); Dim(&c, size + 1);
   		c[size] = 0;
		printf("%s : %d bytes received\xa", &c, size);
	}
	
