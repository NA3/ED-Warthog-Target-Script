			if(sHeadLook){ActKey(KEYON+PULSE+EXEC("initLED(ToogleHeadLookLED, 1);"));}	//Put The LED ON
			else {ActKey(KEYON+PULSE+EXEC("initLED(ToogleHeadLookLED, 0);"));}			//Put The LED OFF
			if(DebugMode & !HeadLookGameMode) printf("Head Look	[HOLD]	[%d]	[ON:[1] OFF:[0]]\x0a", sHeadLook);
		}
	}

